<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Root container -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp">
        <LinearLayout
            android:id="@+id/root_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent" >

            <RelativeLayout
                android:id="@+id/expanded_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/colorPrimary" >

                    <TextView
                        android:id="@+id/close_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center|top"
                        android:background="@drawable/hollow_circle_bg"
                        android:backgroundTint="@color/white"
                        android:text="X"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/floating_sender_iv"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="@color/gray"
                        android:src="@drawable/ic_person" >
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/floating_senderName_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/floating_sender_iv"
                        android:layout_centerVertical="true"
                        android:text="Contact Name"
                        android:textColor="@color/white"
                        android:textSize="25dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:text="By Priority Contacts App"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/msgContainer"
                    android:orientation="horizontal"
                    android:layout_below="@+id/banner"
                    android:weightSum="8"
                    android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/floating_senderMsg_tv"
                            android:layout_width="0dp"
                            android:padding="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:scrollbars="vertical"
                            android:text="Message Logs good Message Logs good Message Logs good Message Logs good
Message Logs good Message Logs good Message Logs good Message Logs good "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"

                        android:id="@+id/floating_expandMsg_iv"
                        android:src="@drawable/ic_expand_view"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/hollow_circle_bg"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_below="@+id/msgContainer"
                    android:weightSum="1">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/floating_sendMsg_et"
                        android:layout_weight="1"
                        android:background="@drawable/text_white_bacground__radius"
                        android:hint="Write your response"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray" />

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:id="@+id/floating_sendMsg_iv"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/hollow_circle_bg"
                        android:gravity="center_horizontal"
                        android:src="@drawable/ic_send" />
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:id="@+id/floating_call_iv"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/hollow_circle_bg"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/ic_phone_colorful" />

                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_title_tv"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:textColor="@color/green_noti_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ongoing Call" />
    <TextView
        android:id="@+id/notification_incoming_caller"
        style="@style/TextAppearance.Compat.Notification.Media"
        android:textColor="@color/black"
        android:maxLines="1"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mom Jazz" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notification_answer_call_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableTint="@color/green_noti_text"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="ANSWER"
            android:textSize="@dimen/_14ssp"
            android:textAllCaps="false"
            android:textColor="@color/green_noti_text" />

        <TextView
            android:id="@+id/notification_reject_call_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_end_call"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="DECLINE"
            android:textSize="@dimen/_14ssp"
            android:textAllCaps="false"
            android:textColor="#ff0000" />
    </LinearLayout>
</LinearLayout>